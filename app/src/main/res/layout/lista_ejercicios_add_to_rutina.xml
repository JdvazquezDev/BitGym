<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lista_ejercicios_to_add_rutina"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fitgym.ui.addEjerciciosToRutinaActivity"
    android:padding="5dp">


    <EditText
        android:id="@+id/editView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:hint="Introduce el nombre del ejercicio a buscar..."/>

    <ListView

        android:id="@+id/list_ejercicios_to_add_rutina"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9"></ListView>

</LinearLayout>