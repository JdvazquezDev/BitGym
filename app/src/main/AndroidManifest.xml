<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.BitGym">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:hardwareAccelerated="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.calendarRoutineActivity"></activity>
        <activity android:name=".ui.listExercisesActivity"></activity>
        <activity android:name=".ui.editExercisesActivity"></activity>
        <activity android:name=".ui.addExercisesActivity"></activity>
        <activity android:name=".ui.listExercisesRoutineActivity"></activity>
        <activity android:name=".ui.addExercisesToRoutineActivity"></activity>
        <activity android:name=".ui.editExerciseRoutineActivity"></activity>
        <activity android:name=".ui.viewExercisesActivity"></activity>
        <activity android:name=".ui.viewExercisesRoutineActivity"></activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
</manifest>